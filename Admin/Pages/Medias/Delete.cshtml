@page "{mediaid}"
@model Admin.Pages.Medias.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
@{
    string GetMediaPath(int index)
    {
        return Model.ClassNameToDirectory(Model.MediaTypeIdToClassName(Model.Media.MediaTypeId)) + '/' + Model.Media.MediaTranslations[index].Url;
    }
}
<h1>Delete</h1>

<form method="post" class="mb-3 bg-danger bg-opacity-50">
    <div class="row text-center">
        <h2>Are you sure you want to delete this?</h2>
    </div>
    <div class="d-flex justify-content-center p-3">
        <span class="me-3">
            <input class="btn btn-danger" type="submit" value="Yes" />
        </span>
        <span class="ms-3">
            <a asp-page="Index" class="btn btn-primary">No</a>
        </span>
    </div>
</form>
<div class="row">
    <div class="col">
        <div class="card text-center">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills">
                    @foreach (var trans in Model.Media.MediaTranslations)
                    {
                        <li class="nav-item">
                            <a id='@($"lang_nav_{trans.LanguageId}")' data-lang='@trans.LanguageId' class="nav-link lang_nav" aria-current="true" href="#">@trans.LanguageId</a>
                        </li>
                    }
                </ul>
            </div>
            <input hidden asp-for="@Model.Media.MediaTypeId" />
            @{int i = 0;}
            @foreach (var trans in Model.Media.MediaTranslations)
            {
                <div id='@($"lang_body_{trans.LanguageId}")' data-lang='@(trans.LanguageId)' class="lang_body card-body">
                    <label asp-for="@trans.Title" class="control-label"></label>
                    <span asp-for="@trans.Title" class="form-control">@trans.Title</span>

                    <label asp-for="@trans.Description" class="control-label"></label>
                    <span class="form-control">@trans.Description</span>

                    <label asp-for="@trans.Url" class="control-label d-block"></label>
                    @if (Model.Media.MediaTypeId == MediaTypeEnum.Photo)
                    {
                        <img class="img-fluid" src="~/@GetMediaPath(i)" />
                    }
                    @if (Model.Media.MediaTypeId == MediaTypeEnum.Audio)
                    {
                        <audio src="~/@GetMediaPath(i)" controls></audio>
                    }
                    @if (Model.Media.MediaTypeId == MediaTypeEnum.Video)
                    {
                        <video class="form-control img-fluid" src="~/@GetMediaPath(i)" controls></video>
                    }
                </div>
                i++;
            }
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/media.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(document).ready(initTabs());
    </script>
}
